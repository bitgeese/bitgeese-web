---
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className } = Astro.props;
---

{
  href && (
    <a
      href={href}
      target="_blank"
      rel="noopener noreferrer"
      class:list={[
        'my-4 text-lg font-medium',
        'text-[var(--color-foreground)]',
        'underline',
        'hover:text-[var(--color-foreground)]/80',
        'focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--color-accent)]',
        'link-hover-lift-color',
        className,
      ]}
    >
      <slot>Visit Project {/* Default text */}</slot>
    </a>
  )
}

