---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import ThemeToggle from '../components/ThemeToggle.astro';

// Placeholder for links - replace with your actual URLs
const links = [
	{ name: "github", url: "https://github.com/bitgeese" },
	{ name: "twitter", url: "https://twitter.com/MaciejJanowski" },
	{ name: "linkedin", url: "https://linkedin.com/in/maciej-janowski-57755a149/" },
	// Add other relevant links here
];

// Secondary navigation links
const secondaryLinks = [
	{ name: "writings", url: "/writings" },
	{ name: "projects", url: "/projects" },
];

const bio = "Python engineer building Django/FastAPI backends and LLM-powered apps. I like making useful stuff and teaching others how to code with AI.";
const contactEmail = "maciej.janowski1@icloud.com"; // Replace with your actual email
const brandName = "bitgeese";
---

<Layout title={brandName} description="Focused Precision.">
	<!-- Theme toggle positioned in the top right corner -->
	<div class="absolute top-4 right-4 z-10">
		<ThemeToggle />
	</div>

	<main class="flex min-h-screen flex-col items-center justify-center p-8" id="main-content">
		<div class="w-full max-w-lg space-y-8">
			<!-- Navigation container - both navs together -->
			<div class="text-center">
				<!-- Primary navigation -->
				<nav class="inline-flex flex-wrap items-center justify-center gap-x-4 gap-y-2 mb-2">
					<span class="text-lg font-semibold mr-2">{brandName}</span>
					<span class="text-muted">/</span> 
					{links.map((link) => (
						<>
							<a
								href={link.url}
								target="_blank"
								rel="noopener noreferrer"
								class="text-base underline hover:text-foreground/80 transition-colors duration-200"
							>
								{link.name}
							</a>
							<span class="text-muted">/</span>
						</>
					))}
				</nav>
				
				<!-- Line break for clean separation -->
				<br/>
				
				<!-- Secondary navigation -->
				<nav class="inline-flex flex-wrap items-center justify-start gap-x-4 gap-y-2 mb-8 ml-auto">
					<span class="invisible text-lg font-semibold mr-2">{brandName}</span>
					<span class="invisible text-muted">/</span>
					{links.map((link, i) => i < links.length - 2 && (
						<>
							<span class="invisible">{link.name}</span>
							<span class="invisible text-muted">/</span>
						</>
					))}
					{secondaryLinks.map((link, index) => (
						<>
							<a
								href={link.url}
								class="text-base underline hover:text-foreground/80 transition-colors duration-200"
							>
								{link.name}
							</a>
							<span class="text-muted">/</span>
						</>
					))}
				</nav>
			</div>

			<section class="text-center">
				<p class="text-base leading-relaxed">{bio}</p>
			</section>

			<section class="pt-4 text-center">
				<a 
					href={contactEmail}
					class="text-base underline hover:text-foreground/80 transition-colors duration-200"
				>
					Inquire about collaboration
				</a>
			</section>
		</div>
	</main>

	<!-- Load Motion One from CDN -->
	<script is:inline src="https://cdn.jsdelivr.net/npm/motion@latest/dist/motion.js"></script>
	
	<script is:inline>
		// Motion is available as a global variable when using the CDN version
		document.addEventListener('DOMContentLoaded', () => {
			Motion.animate(
				"#main-content",
				{ opacity: [0, 1], y: [5, 0] }, // Reduced y-offset for less pronounced movement
				{ duration: 0.5, easing: "ease-out", delay: 0.1 }
			);
		});
	</script>
</Layout>
